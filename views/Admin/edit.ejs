<%- include('../partials/head.ejs') %> 
<body>
    <%- include('../partials/header.ejs') %> 

    <main>
        <%= orquideas.id %> 
        <form action="/admin/editar/<%= orquideas.id %> " method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="" class="form-label">Nombre</label>
                <input value="<%= orquideas.nombre %> " name="nombre" type="text" class="form-input">
            </div>
            <div class="form-group">
                <label for="" class="form-label">Clima</label>
                <select name="clima" id="category" class="control">
                    <% for (let i = 0; i < climas.length; i++) { %>
                        <% if (climas[i].id == orquideas.climas_id) {%>

                            <option value="<%=climas[i].id%>" selected>
                                <%=climas[i].tipoDeClima%>
                            </option>

                        <% } else { %>

                            <option value="<%=climas[i].id%>">
                                <%=climas[i].tipoDeClima%>
                            </option>

                        <% } %>

                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="" class="form-label">Precio</label>
                <input value="<%= orquideas.precio %> " name="precio" type="text" class="form-input">
            </div>
            <div class="form-group">
                <label for="" class="form-label">Descripcion</label>
                <input value="<%= orquideas.descripcion %> " name="descripcion" type="text" class="form-input">
            </div>
            <div class="form-group">
                <label for="" class="form-label">Categoria</label>
                <input value="<%= orquideas.categoria_id %> " name="categoria" type="text" class="form-input">
            </div>
            <div class="form-group">
                <label for="" class="form-label">tama√±o</label>
                <input value="<%= orquideas.tamanio_id %> " name="tamanio" type="text" class="form-input">
            </div>
            <div class="form-group">
                <label for="" class="form-label">disponibilidad</label>
                <input value="<%= orquideas.disponibilidad %> " name="disponibilidad" type="text" class="form-input">
            </div>
            <div class="form-group">
                <label for="" class="form-label">flor</label>
                <input value="<%= orquideas.flor %> " name="flor" type="text" class="form-input">
            </div>
            <div class="form-group">
                <label for="" class="form-label">imagen 1</label>
                <input name="imagen" type="file" class="form-input">
                <input type="hidden"  name="oldImagen1"  value="<%= orquideas.imagen1%>">
            </div>
            <div class="form-group">
                <label for="" class="form-label">imagen 2</label>
                <input name="imagen" type="file" class="form-input">
                <input type="hidden"  name="oldImagen2"  value="<%= orquideas.imagen2%>">
            </div>
            <div class="form-group">
                <label for="" class="form-label">imagen 3</label>
                <input name="imagen" type="file" class="form-input">
                <input type="hidden"  name="oldImagen3"  value="<%= orquideas.imagen3%>">
            </div>

            <input type="submit" value="Enviar">
        </form>

        <form action="/admin/eliminar/<%= orquideas.id %> " method="post">
            <input type="submit" value="Eliminar planta">   
        </form>
    </main>
    
    <%- include("../partials/footer.ejs") %>
</body>
</html>